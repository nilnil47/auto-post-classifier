  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "." }
      ],
      "justMyCode": true
    },
    {
      "name": "run auto post classifier",
      "type": "python",
      "request": "launch",
      "program": "poetry run python auto_post_classifier/main.py --api -d data/AntiIsraeli.csv",
      "cwd": "/Users/user/projects/foa/auto-post-classifier",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
